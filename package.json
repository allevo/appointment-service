{
  "name": "appointment-service",
  "version": "1.0.0",
  "description": "An appointment service",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run compile-schemas",
    "build": "tsc -p tsconfig.json",
    "prestart": "npm run build",
    "start": "fastify start index.js",
    "compile-schemas": "npm run compile-schemas-auth && npm run compile-schemas-appointment",
    "compile-schemas-auth": "json2ts -i auth/schemas -o auth/types",
    "compile-schemas-appointment": "json2ts -i appointment/schemas -o appointment/types",
    "pretest": "npm run build",
    "test": "npm run lint && npm run unit",
    "unit": "tap -b -j1 tests/*.test.ts",
    "coverage": "tap --coverage-report=html -b -j1 tests/*.test.ts",
    "lint": "standardx **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allevo/date-service.git"
  },
  "keywords": [],
  "author": "Tommaso Allevi <tomallevi@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allevo/date-service/issues"
  },
  "homepage": "https://github.com/allevo/date-service#readme",
  "dependencies": {
    "@types/mysql": "^2.15.15",
    "@types/tap": "^14.10.0",
    "@types/uuid": "^8.3.0",
    "fastify": "^3.2.1",
    "fastify-formbody": "^4.0.3",
    "fastify-jwt": "^2.1.2",
    "fastify-plugin": "^2.3.0",
    "fastify-swagger": "^3.3.0",
    "mysql": "^2.18.1",
    "pg": "^8.3.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@types/pino": "^6.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "husky": "^4.2.5",
    "json-schema-to-typescript": "^9.1.1",
    "pino": "^6.5.1",
    "standardx": "^5.0.0",
    "tap": "^14.10.8",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "types/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
